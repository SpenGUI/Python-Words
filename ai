from flask import Flask, redirect, url_for
import random

app = Flask(__name__)

def load_words():
    with open('words.txt') as word_file:
        valid_words = set(word_file.read().split())

@app.route('/')
def home():
    # Render the HTML template with the form
    return render_template('home.html')

@app.route('/search')
def search():
    # Generate a new random word
    random_word = random.choice(open('words.txt').read().split()).strip()
    # Redirect the user to the search results page with the query for the word's meaning
    return redirect(url_for('results', query=random_word))

@app.route('/results/<query>')
def results(query):
    # Render the HTML template with the search results
    return render_template('results.html', query=query)

if __name__ == '__main__':
    app.run()
